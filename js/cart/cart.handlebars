<div>
{{#if templates}}

<div class="cart-hd">
	<div class="cart-th th-select">
		<input id="checkbox-all" name="checkbox-all" type="checkbox">
		<label for="checkbox-all">全选</label>
	</div>
	<div class="cart-th th-goods">商品</div>
	<div class="cart-th th-price">价格</div>
	<div class="cart-th th-inventory">库存</div>
	<div class="cart-th th-quantity">数量</div>
	<div class="cart-th th-action">操作</div>
</div>
<div class="cart-list">
	{{#templates}}
		<div class="cart-item"  id="{{id}}" data-code={{code_number}}>
			<div class="cart-td td-select">
				<input type="checkbox">
			</div>
			<div class="cart-td td-goods">
				<a class="td-goods-img" href="/demo/editor?id={{id}}"><img src="{{img}}!mlog" alt=""></a>
				<a class="td-goods-info" href="/demo/editor?id={{id}}">{{name}}</a>
			</div>
			<div class="cart-td td-price">
				<span data="2799.00">¥2799.00</span>
			</div>
			<div class="cart-td td-inventory">
				<span>有货</span>
			</div>
			<div class="cart-td td-quantity">
				<div class="quantity-form">
	                        <a href="javascript:void(0);" class="decrement" >-</a>
	                        <input type="text" class="quantity-text" value="1">
	                        <a href="javascript:void(0);" class="increment">+</a>
	                    </div>
			</div>
			<div class="cart-td td-action">
				<a class='remove' href="javascript:void(0);">删除</a>
			</div>
		</div>
	 {{/templates}}
</div>
<div class="cart-bt">
	<div class="cart-button"><a href="">去结算 &gt;</a></div>
	<div class="total">
              总计（不含运费）：
              <span id="finalPrice">¥17290.00</span>
          </div>
</div>

{{/if}}
</div>